<style>
  .root {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    background-image: linear-gradient(174.2deg, rgba(255,244,228,1) 7.1%, rgba(240,246,238,1) 67.4%);
    padding: 60px;
    --text-color: hsla(0, 0%, 10%, 1);
  }

  .title {
    color: var(--text-color);
    font-weight: 800;
    font-size: 80px;
  }

  .description {
    color: var(--text-color);
    font-weight: 400;
    font-size: 40px;
  }

  .top {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .bottom {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .footer {
    display: flex;
    color: var(--text-color);
    font-weight: 400;
    font-size: 40px;
    align-items: center;
    gap: 16px;
  }

  .name {
    display: flex;
  }

  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 70px;
    height: 70px;
    border-radius: 100%;
    background-color: var(--text-color);
  }

  .logo {
    display: flex;
    width: 64px;
    height: 64px;
    border-radius: 100%;
    background-repeat: no-repeat;
    background-image: url("data:image/png;base64,");
  }
</style>

<div class="root">
  <div class="top">

    {% if title !== '' and title !== "Jay's Notes" %}
      <h1 class="title">{{ title }}</h1>
    {% else %}
      <h1 class="title">Jay's Notes</h1>
    {% endif %}

    <div class="description">{{ description }}</div>
  </div>

  <div class="bottom">
    <div class="footer">
      <span class="name">Jay's Notes</span>

      <span class="logo-container">
        <span class="logo"></span>
      </span>

    </div>
  </div>
</div>